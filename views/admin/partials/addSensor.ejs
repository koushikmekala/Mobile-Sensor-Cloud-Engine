<div class="container" style="width:auto">
<br/>
<table class="table table-condensed">
	<thead><tr><th>Sensor Form</th></tr></thead>
	<tbody><tr><td><br/>
<form ng-controller="addSensorController" ng-submit="submit();">
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Sensor ID</label>
    <div class="col-sm-8">
      <input type="text" ng-model="sensorID" class="form-control" placeholder="ID">
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Sensor Type</label>
    <div class="col-sm-8">
      <select class="form-control" ng-model="sensorType" >
        <option>Stream Flow</option>
        <option>Stream Height</option>
        <option>Water Level</option>
        <option>Water Temperature</option>
        <option>Wave Height and Direction</option>
        <option>Wind Speed and Direction</option>
       </select>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Select Sensor Hub</label>
    <div class="col-sm-8">
      <select class="form-control" ng-model="sensorHub" >
        <option  ng-repeat="sensorHub in sensorHubs">{{sensorHub.sensorHubName}}</option>
       </select>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Select Sensor Status</label>
    <div class="col-sm-8">
       <toggle-switch ng-model="sensorStatus"></toggle-switch>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Dimensions</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" ng-model="sensorDimensions"  placeholder="L,B,H">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Signal Type</label>
    <div class="col-sm-8">
      <select class="form-control" ng-model="sensorSignalType" >
        <option>Broadband</option>
        <option>Wifi</option>
       </select>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Signal Speed(in KBPS)</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" ng-model="sensorSignalSpeed" >
     
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Number Of Pins</label>
    <div class="col-sm-8">
      <select class="form-control" ng-model="sensorPins" >
       <option>1</option>
       <option>2</option>
       <option>3</option>
      </select>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Output Signal</label>
    <div class="col-sm-8">
      <select class="form-control" ng-model="sensorOutputSignal" >
       <option>Digital</option>
       <option>Analog</option>
      </select>
    </div>
  </div>  
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Installation Date</label>
    <div class="col-sm-8">
      <input type="date" class="form-control" ng-model="sensorInstallationDate" >
     
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Sensor Location-Latitude</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" placeholder="Latitude" ng-model="sensorLatitude" >
     
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Sensor Location-Longitude</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" placeholder="Longitude" ng-model="sensorLongitude" >
     
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">Sensor Location- City</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" placeholder="City" ng-model="sensorCity" >
     
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="submit" value="Details Stored Successfully" style="width:400px" class="btn btn-warning btn-large" ng-hide="storedStatus" disabled>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-8">
      <button type="submit" class="btn btn-success btn-block">Add</button>
    </div>
  </div>
</form>
</td></tr></tbody>
</table>
</div>