<div class="container" style="width:auto" ng-controller="adminDashboardController">
	<br/>
	<form>
	<div class="row">
		<a ng-click="view('addSensor')">
			<div class="col-lg-3 col-md-6">
		        <div class="panel panel-primary">
		            <div class="panel-heading">
		                <div class="row">
		                    <div class="col-xs-3">
		                        <i class="fa fa-cloud fa-5x"></i>
		                    </div>
		                    <div class="col-xs-9 text-right">
		                        <div class="huge">Add New Sensor</div>
		                    </div>
		                </div>
		            </div>
		        </div>
		    </div>
	    </a>
	    <a ng-click="view('addSensorHub')">
		    <div class="col-lg-3 col-md-6">
		        <div class="panel panel-green">
		            <div class="panel-heading">
		                <div class="row">
		                    <div class="col-xs-3">
		                        <i class="fa fa-plus fa-5x"></i>
		                    </div>
		                    <div class="col-xs-9 text-right">
		                        <div class="huge">Add Sensor Hub</div>
		                    </div>
		                </div>
		            </div>
		        </div>
		    </div>
	    </a>
	    <a ng-click="view('manageSensors')">
		    <div class="col-lg-3 col-md-6">
		        <div class="panel panel-yellow">
		            <div class="panel-heading">
		                <div class="row">
		                    <div class="col-xs-3">
		                        <i class="fa fa-cog fa-5x"></i>
		                    </div>
		                    <div class="col-xs-9 text-right">
		                        <div class="huge">Manage Sensors</div>
		                    </div>
		                </div>
		            </div>
		        </div>
		    </div>
	    </a>
	    <a ng-click="view('manageSensorsHub')">
		    <div class="col-lg-3 col-md-6">
		        <div class="panel panel-red">
		            <div class="panel-heading">
		                <div class="row">
		                    <div class="col-xs-3">
		                        <i class="fa fa-pencil fa-5x"></i>
		                    </div>
		                    <div class="col-xs-9 text-right">
		                        <div class="huge">Manage Sensor Hubs</div>
		                    </div>
		                </div>
		            </div>
		        </div>
		    </div>
		</a>
    </div>
	</form>

	<table class="table table-bordered" style="width:700px;height:400;">
		<thead><tr class="active"><th>Sensor Hubs Subscription count</th></tr></thead>
	    <tbody><tr>
		<td><canvas id="barChart"></canvas></td></td>
		</tr></tbody>
	</table>
</div>
