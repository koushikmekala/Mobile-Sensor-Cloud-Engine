    <link rel="stylesheet" href="http://fortawesome.github.io/Font-Awesome/assets/css/site.css">
    <link rel="stylesheet" href="http://fortawesome.github.io/Font-Awesome/assets/font-awesome/css/font-awesome.css">
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
	<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
	<script src="/js/angular-toggle-switch.js"></script>
	<link rel="stylesheet" href="/stylesheets/angular-toggle-switch.css">
	 <link rel="stylesheet" type="text/css" href="/stylesheets/sweetalert.css"> 
	<script type="text/javascript" src="/js/sweetalert.min.js"></script>
	<!-- Controllers -->
	<script src="/angularJS/adminControllers/adminDashboardRouting.js"></script>
	<script src="/angularJS/adminControllers/addSensorController.js"></script>
	<script src="/angularJS/adminControllers/addSensorHubController.js"></script>
	<script src="/angularJS/adminControllers/manageSensorHubController.js"></script>
	<script src="/angularJS/adminControllers/manageSensorsController.js"></script>
    <script src="/angularJS/adminControllers/adminDashboardController.js"></script>
    <script type="text/javascript">
    	$(document).ready(function(){
		   $("li a").click(function(){
			   $("li a.active").removeClass("active");
			   $(this).addClass("active");
			});
		});
    </script>
    <style>
        body{
            background:#f8f8f8;
            margin: 0;
            padding-top:0px;
            padding-bottom:0px;
            padding-left:0px;
            padding-right:0px;
        }
        .row{
            margin-left:0px;
            margin-right:0px;
        }
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            background-color: black;
            height: 100%;
            width:20%;
        }

        li a {
            display: block;
            color: white;
            padding: 8px 0 8px 16px;
            text-decoration: none;
        }
        li a.active {
            background-color: #810541;
            color: white;
        }
        /* Change the link color on hover */
        li a:hover {
            background-color: #810541;
            color: white;
        }
        /* Search box styles*/
        .stylish-input-group .input-group-addon{
		    background: white !important; 
		}
		.stylish-input-group .form-control{
			border-right:0; 
			box-shadow:0 0 0; 
			border-color:#ccc;
		}
		.stylish-input-group button{
		    border:0;
		    background:transparent;
		}
		.huge {
		    font-size: 20px;
		}
		.panel-green .panel-heading {
		    border-color: #5cb85c;
		    color: #fff;
		    background-color: #5cb85c;
		}
		.panel-yellow .panel-heading {
		    border-color: #f0ad4e;
		    color: #fff;
		    background-color: #f0ad4e;
		}
		.panel-red .panel-heading {
		    border-color: #d9534f;
		    color: #fff;
		    background-color: #d9534f;
		}
    </style>
</head>
<body ng-controller="adminCtrl">
	<div class="row" style="height:70px;background-color:black;">
		<div class="col-sm-11">
	    <p style="font-size:32px;margin-top:12px;color:white">&nbsp;Sensor Management Console</p>
	    </div>
	    <div class="col-sm-1">
	    <p style="align:right;margin-top:15px;">
	    <a style="align:right;margin-top:15px;font-size:24px;color:white" href="/signout">SignOut</a></p>
	    </div>
	    <br/>
	</div>
	<div class="row">
		<div class="col-sm-2" style="padding-left: 0px;padding-right: 0px;">
		<div class="input-group stylish-input-group" style="width: 220px;">
            <input type="text" class="form-control"  placeholder="Search" >
            <span class="input-group-addon">
                <button type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                </button>  
            </span>
        </div>
	    <ul style="width:220px;">
	        <li><a class="active" ui-sref="sensorAdminDashboard"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp; Dashboard</a></li>
	        <li><a ui-sref="sensorStats"><i class="fa fa-bar-chart fa-fw" aria-hidden="true"></i>&nbsp; Sensor Statistics</a></li>
	        <li><a ui-sref="sensorProvider"><i class="fa fa-bar-chart fa-fw" aria-hidden="true"></i>&nbsp; Sensor Provider</a></li>
	        <li><a ui-sref="profile"><i class="fa fa-pencil fa-fw" aria-hidden="true"></i>&nbsp; Profile</a></li>
	    </ul>
	    </div>
	    <div class="col-sm-10">
	    <div ui-view></div>
	    </div>
	<div>
</body>
